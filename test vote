<script>
  // 로그인된 사용자 쿠키가 있는지 확인
  function isLoggedIn() {
    const cookies = document.cookie.split("; ");
    return cookies.some(c => c.startsWith("loginUser_"));
  }

  // 로그인 상태 확인 후, 아니면 경고 후 리다이렉트
  if (!isLoggedIn()) {
    alert("올바르지 않은 경로로 접속하셨습니다.");
    window.location.href = "../../index.html";
  }
</script>

  
  <style>
    body {
      font-family: 'Pretendard Variable', sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
      height: 100vh;
      margin: 0;
      background-color: white;
    }

    h1 {
      font-size: 2em;
      color: gray;
    }

    h2 {
      font-size: 2.5em;
      margin-bottom: 40px;
      color: black;
    }

    .button-group {
      display: flex;
      gap: 30px;
      margin-bottom: 30px;
    }

    .vote-btn {
      padding: 20px 40px;
      font-size: 2em;
      border: none;
      border-radius: 20px;
      color: white;
      cursor: pointer;
      transition: all 0.3s ease;
      opacity: 1;
      transform: scale(1);
    }

    .agree { background-color: #363C84; }
    .disagree { background-color: red; }
    .abstain { background-color: gray; }

    .selected {
      transform: scale(1.2);
      opacity: 1;
      z-index: 1;
    }

    .dimmed {
      transform: scale(0.9);
      opacity: 0.4;
    }

    .submit-btn {
      padding: 15px 30px;
